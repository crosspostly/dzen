# API Keys
GEMINI_API_KEY=your_gemini_api_key_here
API_KEY=your_api_key_here

# Final Article Cleanup Gate (v6.0 - Уровень 2)
# Enable/disable final article cleanup
FINAL_CLEANUP_ENABLED=true

# Cleanup threshold: low, medium, high
# low: cleanup only critical issues (metadata, markdown)
# medium: cleanup critical + medium issues (repeated phrases)
# high: cleanup all issues (including orphaned fragments)
CLEANUP_THRESHOLD=medium

# Gemini model for cleanup
CLEANUP_MODEL=gemini-2.0-flash

# Temperature for cleanup (0.0-1.0, lower = more conservative)
CLEANUP_TEMPERATURE=0.3

# Max retries for cleanup if first attempt fails
CLEANUP_MAX_RETRIES=2
